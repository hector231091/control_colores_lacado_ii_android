<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:parentTag="android.widget.LinearLayout"
    tools:orientation="vertical"
    tools:layout_width="match_parent"
    tools:layout_heigth="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/button_height">

        <TextView
            android:id="@+id/textViewColourHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="COLOR"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonChangeStartTimeHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="INICIO CAMBIO"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonColourStartTimeHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="INICIO COLOR"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonColourEndTimeHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="FINAL COLOR"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewHangersHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="BASTIDORES"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewObservationsHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="OBSERVACIONES"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/editTextColour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewChangeStartTimeLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewColourStartTimeLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewColourEndTimeLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <EditText
            android:id="@+id/editTextHangersAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextObservations"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

    </LinearLayout>
</merge>