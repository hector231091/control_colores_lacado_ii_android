<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/button_height">

        <TextView
            android:id="@+id/colur_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="COLOR"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/change_start_time_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="INICIO CAMBIO"
            android:textSize="20sp" />

        <Button
            android:id="@+id/colour_start_time_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="INICIO COLOR"
            android:textSize="20sp" />

        <Button
            android:id="@+id/colour_end_time_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="FINAL COLOR"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hangers_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="BASTIDORES"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/observations_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/config_header_input_data"
            android:gravity="center"
            android:text="OBSERVACIONES"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/colour_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <TextView
            android:id="@+id/change_start_time_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <TextView
            android:id="@+id/colour_start_time_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <TextView
            android:id="@+id/colour_end_time_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

        <EditText
            android:id="@+id/hangers_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center"
            android:inputType="number" />

        <EditText
            android:id="@+id/observations_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_edit_text_and_text_view"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/register_stop_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="REGISTRAR Y DESCANSO"
            android:textSize="30sp" />

        <Button
            android:id="@+id/register_continue_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="REGISTRAR Y CONTINUAR"
            android:textSize="30sp" />

        <Button
            android:id="@+id/register_end_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="REGISTRAR Y FINALIZAR"
            android:textSize="30sp" />

    </LinearLayout>

    <com.hectormorales.colorescabinalacado2.view.HistoricalView
        android:id="@+id/historicalView"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/errores"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border_edit_text_and_text_view"
        android:gravity="center" />

</LinearLayout>